{
    "manifest_version": 3,

    "name": "Groupify",
    "version": "0.0.1",
    "description": "Automatically group tabs with one click",

    "icons": {
        "16": "icons/16.png",
        "32": "icons/48.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },

    "action": {
        "default_title": "Click to Groupify",
        "default_popup": "popup/main.html"
    },

    "host_permissions": [
        "<all_urls>"
    ],

    "permissions": [
        "tabs",
        "tabGroups"
    ]
}